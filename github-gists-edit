from json import load, dumps, loads
from os.path import expanduser
from subprocess import Popen, PIPE
from sys import argv

__version__ = '0.1.0'

_, user, gid, filename, content = argv

def curl( args, data = None ):
	p = Popen( [ 'curl', '-s' ] + ( [ '-d', '@-' ] if data else [] ) + args, stdin = PIPE, stdout = PIPE )
	return p.communicate( dumps( data ) if data else None )[ 0 ]

with open( expanduser( '~/.gdu-tokens.json' ), 'r' ) as f:
	token = load( f )[ user ]

r = loads( curl( [
	'-H', 'Authorization: token {0}'.format( token ),
	'-X', 'PATCH',
	'https://api.github.com/gists/{0}'.format( gid )
], { "files": { filename: {"content": content } } } ) )

print "New content: ", r[ 'files' ][ filename ][ 'content' ]
